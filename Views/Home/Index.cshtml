<!DOCTYPE html>
<html lang="en"></html>
	<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    	<title>Form Submission</title>
        <meta charset="utf-8">
        <link rel="stylesheet" href="~/css/style.css">
	</head>
    <body>
        <h1>Submit Your Information Below!</h1>
        @model User
        <form asp-action="Create" asp-controller="Home" method="post">
            <span asp-validation-for="FirstName"></span><br>
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName"><br>
            <span asp-validation-for="LastName"></span><br>
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName"><br>
            <span asp-validation-for="Age"></span><br>
            <label asp-for="Age">Age</label>
            <input asp-for="Age"><br>
            <span asp-validation-for="Email"></span><br>
            <label asp-for="Email">Email</label>
            <input asp-for="Email"><br>
            <span asp-validation-for="Password"></span><br>
            <label asp-for="Password">Password</label>
            <input asp-for="Password"><br>
            <input value="Add User" type="submit">
        </form>
    </body>
</html>